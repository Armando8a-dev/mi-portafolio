---
// src/components/Projects.astro
import ProjectCard from "./ProjectCard.astro";
---

<section id="projects" class="page-section">
    <div class="container">
        <div class="main-container">
            <h2 class="heading-sec_mb-med">
                <span class="heading-sec_main">PROYECTOS</span>
                <span class="heading-sec_sub"
                    >Aquí encontrará algunos de los proyectos personales y de
                    clientes que he creado, y cada proyecto contiene su propio
                    estudio de caso.</span
                >
            </h2>
        </div>
        <div class="projects-grid">
            <!-- Aquí puedes agregar tus proyectos -->
            <ProjectCard
                title="Mi Portafolio"
                description="Portafolio personal construido con Astro y desplegado en Netlify. Diseñado para ser rápido, responsivo y mostrar mis habilidades."
                link="https://github.com/tu-usuario/mi-portafolio"
                tags={["Astro", "TypeScript", "CSS"]}
            />
            <ProjectCard
                title="Aplicación de Tareas"
                description="Una aplicación web simple para gestionar tareas diarias. Permite crear, editar, marcar como completadas y eliminar tareas. Construida con React."
                link="https://github.com/tu-usuario/app-tareas"
                tags={["React", "JavaScript", "HTML/CSS"]}
            />
            <ProjectCard
                title="API para Blog"
                description="Una API RESTful construida con Node.js y Express para un sistema de blog, con endpoints para usuarios, posts y comentarios."
                link="https://github.com/tu-usuario/blog-api"
                tags={["Node.js", "Express", "MongoDB"]}
            />
        </div>
    </div>

    <style>
        section {
            padding: 5rem 0;
            width: 100%;
            background-color: #f9f9f9; /* Un fondo ligeramente diferente para separar secciones */
        }
        .main-container {
            max-width: 1100px;
            width: 90%;
            margin: 0 auto;
        }
        .heading-container {
            text-align: center;
            margin-bottom: 4rem;
        }
        .heading-main {
            font-size: 2.5rem;
        }
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
        }

        /* --- REGLAS PARA RESPONSIVO (MÓVIL) --- */
        @media (max-width: 768px) {
            .projects-grid {
                grid-template-columns: 1fr; /* UNA SOLA COLUMNA EN MÓVIL */
            }
        }

        .about_content-details-para:last-child {
            margin-bottom: 4rem;
        }
        .about_content-details-para {
            font-size: 1.8rem;
            color: rgb(102, 102, 102);
            max-width: 60rem;
            line-height: 1.7;
            margin-bottom: 1rem;
        }
        .content-title {
            font-weight: 700;
            font-size: 2.8rem;
            margin-bottom: 3rem;
        }
        .btn-theme {
            color: rgb(255, 255, 255);
            background: rgb(7, 9, 129);
        }

        .btn-med {
            font-size: 1.6rem;
            padding: 1.5rem 5rem;
        }

        .content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10rem;
        }
        .main-container {
            max-width: 120rem;
            width: 92%;
            margin: auto;
        }

        .heading-sec_mb-med {
            margin-bottom: 9rem;
        }

        .heading-sec_main {
            display: block;
            font-size: 4rem;
            text-transform: uppercase;
            letter-spacing: 3px;
            text-align: center;
            margin-bottom: 3.5rem;
            position: relative;
            color: rgb(17, 17, 17);
        }

        .heading-sec_main::after {
            content: "";
            position: absolute;
            top: calc(100% + 1.5rem);
            height: 5px;
            width: 3rem;
            left: 50%;
            transform: translateX(-50%);
            background: rgb(7, 9, 129);
            border-radius: 5px;
        }

        .heading-sec_sub {
            display: block;
            text-align: center;
            color: rgb(85, 85, 85);
            font-size: 2rem;
            font-weight: 500;
            max-width: 80rem;
            line-height: 1.6;
            margin: auto;
        }

        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .page-section {
            padding: 6rem 0;
        }
        .container {
            max-width: 1100px; /* Ancho máximo del contenido */
            width: 90%; /* En pantallas pequeñas, deja un pequeño margen */
            margin: 0 auto; /* Centra el contenedor */
        }
    </style>
</section>
