---
// src/components/Navbar.astro
---

<header>
    <nav>
        <a href="/" class="logo">
            <img
                src="/images/profile.JPG"
                alt="Foto de Armando Ochoa"
                class="profile-pic"
            />
            <span>Armando Ochoa</span>
        </a>
        <ol class="nav-links">
            <li><a href="#about">Sobre Mí</a></li>
            <li><a href="#experience">Experiencia</a></li>
            <li><a href="#projects">Proyectos</a></li>
            <li><a href="#contact">Contacto</a></li>
        </ol>
    </nav>
</header>

<style>
    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 0 50px;
        background-color: #ffffff;
        backdrop-filter: blur(10px);
        z-index: 100;
        height: 80px;
        display: flex;
        align-items: center;
        transition: top 0.3s ease-in-out;
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--color-texto-principal);
        font-weight: 600;
    }

    .profile-pic {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: 2px solid var(--color-primario);
        object-fit: cover;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
        list-style: none;
        padding: 0;
        margin: 0;
        font-family: monospace;
    }

    .nav-links a {
        color: var(--color-texto-principal);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: var(--color-primario);
    }

    /* Ocultar la navegación en pantallas pequeñas */
    @media (max-width: 768px) {
        .nav-links {
            display: none;
        }
        header {
            padding: 0 25px;
        }
    }
</style>
