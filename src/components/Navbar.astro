---
// src/components/Navbar.astro
---

<header>
    <div class="header-content">
        <div class="header_logo-container">
            <div class="header_logo-img-cont">
                <img
                    src="/images/profile.jpg"
                    alt="Foto de Armando Ochoa"
                    class="profile-pic"
                />
            </div>
            <span class="header_logo-sub">Armando Ochoa</span>
        </div>
        <div>
            <ul class="nav-links">
                <li><a class="header_link" href="#">Inicio</a></li>
                <li>
                    <a class="header_link" href="#about">Sobre mi</a>
                </li>
                <li><a class="header_link" href="#projects">Proyectos</a></li>
                <li><a class="header_link" href="#contact">Contacto</a></li>
            </ul>
        </div>
    </div>
</header>

<style>
    .header_logo-sub {
        font-size: 16px;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
    }
    header {
        position: fixed;
        width: 100%;
        z-index: 1000;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 100px;
        background: rgb(255, 255, 255);
    }

    .header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 5rem;

    }

    .header_logo-container {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: rgb(51, 51, 51);
        font-weight: 600;
    }

    .header_logo-img-cont {
        width: 5rem;
        height: 5rem;
        border-radius: 50%;
        overflow: hidden;
        background: rgb(7, 9, 129);
    }

    .profile-pic {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center center;
        display: block;
    }

    .nav-links {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .header_link {
        display: inline-block;
        font-size: 16px;
        color: rgb(51, 51, 51);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
        padding: 2.2rem 3rem;
        transition: color 0.3s;
        text-decoration: none;
    }

    .header_link:hover {
        color: var(--color-primario, rgb(7, 9, 129));
    }

    /* Ocultar la navegación en pantallas pequeñas */
    @media (max-width: 768px) {
        .nav-links {
            display: none;
        }
        .header-content {
            padding: 0 25px; /* Ajusta el padding solo aquí para móviles */
        }
    }
</style>
