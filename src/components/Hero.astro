---
import { Icon } from "astro-icon/components";

// src/components/Hero.astro
---

<section class="hero" class="page-section">
  <div class="container">
    <h1 class="heading-primary">Hola, soy Armando Ochoa</h1>
    <div class="info">
      <p class="text-primary">
        Un desarrollador web orientado a resultados que crea, administra sitios
        web y aplicaciones web que conducen al éxito del producto general.
      </p>
    </div>
  </div>
  <div class="scroll-content">
    <div class="mouse"></div>
  </div>
</section>

<style>
  .hero {
    color: rgb(255, 255, 255);
    height: 100vh;
    position: relative;
    background:
      linear-gradient(
          to right,
          rgba(245, 245, 245, 0.8),
          rgba(245, 245, 245, 0.8)
        )
        center center,
      url("");
    background-position: center center;
  }
  .intro {
    color: var(--color-primario);
    font-family: monospace;
    font-size: clamp(1rem, 3vw, 1.2rem);
    margin-bottom: 1rem;
  }
  .name {
    font-size: clamp(2.5rem, 8vw, 5rem);
    color: var(--color-texto-principal);
    margin: 0;
  }
  .subtitle {
    font-size: clamp(2rem, 7vw, 4rem);
    color: var(--color-texto-secundario);
    margin-top: 0.5rem;
  }
  .description {
    margin-top: 1.5rem;
    max-width: 540px;
    color: var(--color-texto-secundario);
  }
  .cta-button {
    color: var(--color-primario);
    background-color: transparent;
    border: 1px solid var(--color-primario);
    border-radius: 4px;
    padding: 1rem 1.75rem;
    font-size: 1rem;
    text-decoration: none;
    cursor: pointer;
    margin-top: 3rem;
    align-self: flex-start;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: rgba(100, 255, 218, 0.1);
  }

  .left-sidebar {
    display: flex; /* 1. Convierte el contenedor en flexbox */
    flex-direction: column; /* 2. Apila los elementos verticalmente */
    align-items: center; /* 3. Centra los íconos horizontalmente */
    gap: 1.5rem; /* 4. Añade un espacio vertical entre los íconos */
    width: 5rem;
  }

  .scroll-content {
    position: absolute;
    bottom: 3%;
    left: 50%;
    transform: translateX(-50%);
  }

  .mouse {
    width: 25px;
    height: 40px;
    position: relative;
    border-width: 2px;
    border-style: solid;
    border-color: rgb(51, 51, 51);
    border-image: initial;
    border-radius: 60px;
    overflow: hidden;
  }

  .mouse::before {
    content: "";
    width: 5px;
    height: 5px;
    position: absolute;
    top: 7px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgb(51, 51, 51);
    border-radius: 50%;
    opacity: 1;
    animation: wheel 1.3s infinite; /* Aplicas la animación */
  }

  /* Esta es la parte que define la animación */
  @keyframes wheel {
    from {
      opacity: 1;
      top: 7px;
    }
    to {
      opacity: 0;
      top: 25px; /* Mueve la bolita hacia abajo */
    }
  }

  .social {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    background: rgb(255, 255, 255);
    padding: 0.5rem;
  }

  .content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 90rem;
    width: 92%;
  }

  .heading-primary {
    font-size: 5rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-align: center;
    color: rgb(17, 17, 17);
    font-weight: 800;
  }

  .info {
    max-width: 80rem;
    margin: 3rem auto 0px;
  }

  .text-primary {
    color: rgb(51, 51, 51);
    font-size: 2.2rem;
    text-align: center;
    width: 100%;
    line-height: 1.6;
  }         

  /* --- REGLAS PARA RESPONSIVO (MÓVIL) --- */
  @media (max-width: 768px) {
    .hero {
      text-align: center; /* Centra todo el texto */
    }
    .cta-button {
      align-self: center; /* Centra el botón */
    }
  }

  .page-section {
    padding: 6rem 0;
  }
  .container {
    max-width: 1100px; /* Ancho máximo del contenido */
    width: 90%;       /* En pantallas pequeñas, deja un pequeño margen */
    margin: 0 auto;   /* Centra el contenedor */
  }

</style>
