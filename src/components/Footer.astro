---
// src/components/Footer.astro
import { Icon } from "astro-icon/components";
---

<footer>
  <div class="main-container">
    <div class="main-footer__upper">
      <div class="main-footer__row-1 social-links">
        <h2 class="heading-sm"><span>Social</span></h2>
        <a
          href="https://github.com/tu-usuario"
          target="_blank"
          class="main-footer__icon"
          rel="noopener noreferrer"><Icon name="simple-icons:github" /></a
        >
        <a
          href="https://linkedin.com/in/tu-usuario"
          target="_blank"
          class="main-footer__icon"
          rel="noopener noreferrer"><Icon name="simple-icons:linkedin" /></a
        >
      </div>
      <div class="main-footer__row-2">
        <h2 class="heading-sm">Armando Ochoa</h2>
        <p class="main-footer__short-desc">
          Soy un desarrollador Full Stack actualmente enfocado en el Frontend, construyendo interfaces de sitios y aplicaciones web que contribuyen al éxito del producto.
        </p>
      </div>
    </div>

    <!-- Nueva sección de Copyright -->
    <div class="main-footer__lower">
      <div>
        © Copyright {new Date().getFullYear()} Made by <a href=""
          >Armando Ochoa</a
        >
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    color: rgb(255, 255, 255);
    background: rgb(0, 0, 0);
  }

  .main-container {
    max-width: 120rem;
    width: 92%;
    margin: auto;
  }

  /* --- Estilos para la parte superior del Footer --- */
  .main-footer__upper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 10rem; /* Reducido para un mejor punto de quiebre */
    padding: 8rem 0;
  }

  .main-footer__row-1 {
    order: 2;
  }

  .main-footer__row-2 {
    width: 40%;
    order: 1;
    max-width: 50rem;
  }

  .heading-sm {
    font-size: 2.2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1.5rem; /* Añadido para espaciar del contenido */
  }

  .main-footer__icon {
    margin-right: 1.5rem;
    width: 0.5rem;
    color: inherit;
    display: inline-block; /* Asegura que el tamaño se aplique bien */
  }

  /* --- Estilos para la parte inferior del Footer --- */
  .main-footer__lower {
    color: rgb(238, 238, 238);
    font-size: 1.2rem;
    text-align: center;
    padding: 4rem 0;
    border-top: 1px solid rgb(68, 68, 68);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .main-footer__short-desc {
    margin-top: 2rem;
    color: rgb(238, 238, 238);
    font-size: 1.5rem;
    line-height: 1.7;
}

  /* --- REGLAS PARA RESPONSIVO (MÓVIL) --- */
  @media (max-width: 900px) { /* Un punto de quiebre más adecuado */
    .main-footer__upper {
      flex-direction: column; /* Apila los elementos verticalmente */
      align-items: center;   /* Centra los bloques apilados */
      gap: 4rem;             /* Reduce el espacio vertical entre bloques */
      text-align: center;    /* Centra el texto dentro de cada bloque */
      padding: 4rem 0;       /* Reduce el padding vertical */
    }

    .main-footer__row-1,
    .main-footer__row-2 {
      order: 0;              /* Resetea el orden para un flujo natural */
      width: 100%;           /* Cada bloque ocupa todo el ancho */
      max-width: 50rem;
    }

    .main-footer__row-1 .heading-sm {
      margin-top: 2rem; /* Espacio extra arriba de "Social" */
    }
  }
</style>
