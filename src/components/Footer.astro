---
// src/components/Footer.astro
import { Icon } from "astro-icon/components";
---

<footer class="site-footer">
  <div class="container">
    <!-- Contenido Superior: Ahora con el orden correcto -->
    <div class="footer-upper">
      <!-- Columna 1: Información (AHORA PRIMERO) -->
      <div class="footer-column footer-info">
        <h3 class="footer-title">Armando Ochoa</h3>
        <p>
          Un desarrollador web centrado en el frontend que crea el frontend de sitios web y aplicaciones web que conducen al éxito del producto general.
        </p>
      </div>

      <!-- Columna 2: Social (AHORA SEGUNDO) -->
      <div class="footer-column footer-social">
        <h3 class="footer-title">Social</h3>
        <div class="social-icons">
          <a href="https://github.com/Armando8a-dev" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
            <Icon name="simple-icons:github" />
          </a>
          <a href="https://www.linkedin.com/in/armando-ochoa-dev" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <Icon name="simple-icons:linkedin" />
          </a>
        </div>
      </div>
    </div>

    <!-- Contenido Inferior: Créditos -->
    <div class="footer-lower">
      <p>&copy; {new Date().getFullYear()} - Hecho por Armando Ochoa</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: #111827;
    color: #e5e7eb;
    padding: 4rem 0 2rem 0;
  }

  .container {
    max-width: 1100px;
    width: 90%;
    margin: 0 auto;
  }

  .footer-upper {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid #374151;
  }

  .footer-column {
    /* No necesita estilos */
  }

  .footer-info {
    flex-basis: 65%; /* Le damos un poco más de espacio a la info */
  }

  .footer-social {
    flex-shrink: 0; /* Evita que la columna social se encoja demasiado */
  }

  .footer-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #fff;
    margin: 0 0 1rem 0;
  }

  .footer-info p {
    font-size: 0.9rem;
    line-height: 1.6;
    color: #9ca3af;
    max-width: 400px; /* Limita el ancho para que no se extienda demasiado */
  }

  .social-icons {
    display: flex;
    gap: 1.5rem;
  }

  .social-icons a {
    color: #e5e7eb;
    transition: transform 0.3s ease;
  }

  .social-icons a:hover {
    transform: translateY(-3px);
    color: var(--color-primario);
  }

  .social-icons :global(svg) {
    width: 24px;
    height: 24px;
  }

  .footer-lower {
    padding-top: 2rem;
    text-align: center;
    font-size: 0.8rem;
    color: #9ca3af;
  }

  /* --- REGLAS PARA RESPONSIVO (MÓVIL) --- */
  @media (max-width: 768px) {
    .footer-upper {
      flex-direction: column-reverse; /* Apila las columnas, el orden del HTML manda */
      align-items: center;
      text-align: center;
      gap: 2.5rem;
    }

    .footer-info p {
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>