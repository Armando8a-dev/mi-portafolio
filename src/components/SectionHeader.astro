---
// src/components/SectionHeader.astro
interface Props {
  number: string;
  title: string;
}
const { number, title } = Astro.props;
---
<h2 class="section-heading">
  <span class="number">{number}.</span> {title}
</h2>

<style>
  .section-heading {
    display: flex;
    align-items: center;
    font-size: clamp(1.5rem, 5vw, 2rem);
    color: var(--color-texto-principal);
    white-space: nowrap;
    margin-bottom: 2rem;
  }
  .number {
    color: var(--color-primario);
    font-family: monospace;
    margin-right: 1rem;
    font-size: 1.25rem;
  }
  .section-heading::after {
    content: '';
    display: block;
    width: 300px;
    height: 1px;
    background-color: #233554;
    margin-left: 1.25rem;
  }
</style>