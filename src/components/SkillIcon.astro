---
// src/components/SkillIcon.astro
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div class="skill-item">
  <Icon name={icon} />
  <span>{name}</span>
</div>

<style>
  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    background-color: var(--color-fondo-secundario);
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    transition: transform 0.2s ease-in-out;
  }
  .skill-item:hover {
    transform: translateY(-5px);
  }
  /* Estilo para el componente Icon */
  .skill-item :global(svg) {
    width: 40px;
    height: 40px;
    color: var(--color-texto-secundario);
  }
  .skill-item span {
    font-size: 0.9rem;
    color: var(--color-texto-principal);
  }
</style>
